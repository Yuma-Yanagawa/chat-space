.main__chat__messages__body__header{ 'data-message-id':message.id }
  .main__chat__messages__body-user-name
    = message.user.name
  .main__chat__messages__body-date
    = message.created_at.strftime("%Y/%m/%d %H:%M")
  %p.main__chat__messages__body-content{ 'data-last-message-id':message.id }
    = image_tag message.image.to_s if message.try(:image).present?
    = message.body if message.try(:body).present?
